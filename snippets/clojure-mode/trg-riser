(def trigger-riser
  (sample-trigger 104 128 #(repl-buf :buf (sample (str "/Users/josephwilk/Workspace/music/samples/soprano/Samples/Ambiences/kriambiences/ahspicious_" (choose ["04" "06" "12"]) ".wav")) :amp 0.9 :start 0.8 :end 0.9 :release 6.)))

(remove-beat-trigger trg-riser)
